datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //favorites  Favorite[]
  
}
model Favorite {
  id        Int      @id @default(autoincrement())
  //user      User     @relation(fields: [userId], references: [id])
  //userId    Int
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
}

model Product {
  id       Int     @id @default(autoincrement())
  title    String
  body     String
  price    Float
  image    String
  cartItems Cart[]
  favorites   Favorite[]
}

model Cart {
  id        Int      @id @default(autoincrement())
  productId Int
  quantity  Int
  product   Product  @relation(fields: [productId], references: [id])
}
